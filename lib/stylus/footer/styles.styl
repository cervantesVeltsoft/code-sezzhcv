.footer
  stack()
  background-color complement-color
  grid()
  font-family default-base-font-family
  color whiteFont
  overflow hidden
  &__title
    font-size rem-calc(30)
    cell(1,1, g:0)
  &__section-cell
    grid("row", "center")
    cell(1,1, g:50)
    margin-top rem-calc(3)
    margin-bottom rem-calc(3)
    &:nth-child(2)
      margin-top rem-calc(12.5)
    &:last-child
      margin-bottom rem-calc(12.5)
    &__img
      width rem-calc(64)
    &:nth-child(odd)
      flex-direction row-reverse
    &__name
      font-size rem-calc(24)
      text-decoration none
      color principalRed
      &:visited
        color principalRed
      &:active
        color principalRed

@media screen and (min-width: rem-calc(580))
  .footer
    &__section-cell
      cell(1,3, g:rem-calc(20))
      &:nth-child(odd)
        flex-direction row

@media screen and (min-width: rem-calc(breakpoints[md]))
  .footer
    cell(1,1, g:rem-calc(80))
    &__section-cell
      grid("row", "center", justify:"center")
