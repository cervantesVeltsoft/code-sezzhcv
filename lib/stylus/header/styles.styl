
.header
  text-align center
  width 100%
  overflow hidden
  background-image url('../assets/chernobyl.jpg')
  background-size cover
  background-position center
  &__avatar
    width 132.5px
    display block
    margin 10% auto
    border-radius 50%
    border 4px solid complementYellow
    box-sizing border-box
  &__name
    color whiteFont
    centerElement()
    margin-bottom 1rem
  &__email
    color whiteFont
    centerElement()
    margin-bottom 1rem
