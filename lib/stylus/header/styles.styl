.header
  font-family default-base-font-family
  text-align center
  width 100%
  overflow hidden
  background-image url('../assets/chernobyl.jpg')
  background-size cover
  background-position center
  z-index 4
  position relative
  color whiteFont
  &__avatar
    font-size rem-calc(40)
    margin-top rem-calc(50)
    center(132.5px)
    border-radius 50%
    border 4px solid complementYellow
    box-sizing border-box
    box-shadow 0 0 4rem rgba(0, 0, 0, 0.9)
  &__name
    font-family default-base-font-family-italic
    font-weight 100
    font-size rem-calc(44)
    stack()
  &__email
    stack()
    font-size rem-calc(34)
    margin-bottom rem-calc(50)
